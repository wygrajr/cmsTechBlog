<div class="row">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
    <div>{{post.content}}</div>
    <br/>

{{#each comments as |comment| }}
  <div>{{comment.content}}</div>
  <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  <br/>
{{/each}}

    <form class="form login-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-input" rows="5" cols="30" id="content"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" data-id="{{post.id}}" id="comment" type="submit">submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>

